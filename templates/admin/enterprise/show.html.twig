{% extends 'base.html.twig' %}

{% block title %}Enterprise{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        footer {
            position: relative !important;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <h1 class="h1">Enterprise <strong>{{ enterprise.name }}</strong></h1>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-light m-2" href="{{ path('enterprise_index') }}">
                        <i class="fa fa-arrow-left"></i> Back to list
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ enterprise.name }}</td>
                </tr>
                <tr>
                    <th>CNPJ</th>
                    <td>{{ enterprise.cnpj }}</td>
                </tr>
                <tr>
                    <th>E-mail</th>
                    <td>{{ enterprise.email }}</td>
                </tr>
                <tr>
                    <th>Logo</th>
                    <td><img src="{{ asset('uploads/images/' ~ enterprise.logo) }}" class="img-thumbnail" width="100"/>
                    </td>
                </tr>
                <tr>
                    <th>Color</th>
                    <td>
                        <div style="width: 80px; height: 80px; background-color: {{ enterprise.color }}"></div>
                    </td>
                </tr>
                <tr>
                    <th>Contacts</th>
                    <td>
                        <ul>
                            {% for contact in enterprise.contacts %}
                                <li><strong>{{ contact.label }}: </strong> {{ contact.text }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
                </tbody>
            </table>


            <div class="row">
                <div class="col">
                    <a class="btn btn-secondary mb-2" href="{{ path('enterprise_edit', {'id': enterprise.id}) }}">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                </div>
            </div>

            {{ include('admin/enterprise/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
