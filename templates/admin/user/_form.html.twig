{{ form_start(form) }}

<div class="row form mt-2">
    <div class="col {% if form.name.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="col {% if form.phone.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
    </div>
</div>

<div class="row form mt-2">
    <div class="col {% if form.email.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="col {% if form.password.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.password) }}
        {{ form_widget(form.password) }}
        {{ form_errors(form.password) }}
    </div>
</div>

<div class="row form mt-2">
    <div class="col {% if form.type.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.type) }}
        {{ form_widget(form.type) }}
        {{ form_errors(form.type) }}
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <button class="btn btn-success mb-2"><i class="fa fa-save"></i> {{ button_label|default('Save') }}</button>
    </div>
</div>

{{ form_end(form) }}
