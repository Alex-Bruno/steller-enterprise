{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <h1 class="h1">User <strong>{{ user.name }}</strong></h1>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-light m-2" href="{{ path('user_index') }}">
                        <i class="fa fa-arrow-left"></i> Back to list
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ user.type }}</td>
                </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col">
                    <a class="btn btn-secondary mb-2" href="{{ path('user_edit', {'id': user.id}) }}">
                        <i class="fa fa-pencil"></i> Edit
                    </a>
                </div>
            </div>

            {{ include('admin/user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
