{{ form_start(form) }}

<div class="row form mt-2">
    <div class="col-8 offset-2 {% if form.name.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
</div>

<div class="row form mt-2">
    <div class="col-8 offset-2 {% if form.phone.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
    </div>
</div>

<div class="row form mt-2">
    <div class="col-8 offset-2 {% if form.email.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>
</div>

<div class="row form mt-2">
    <div class="col-8 offset-2 {% if form.password.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.password) }}
        {{ form_widget(form.password) }}
        {{ form_errors(form.password) }}
    </div>
</div>

<div class="row mt-2">
    <div class="col-8 offset-2">
        <button class="btn btn-success">{{ button_label|default('Register') }}</button>
    </div>
</div>

{{ form_end(form) }}
