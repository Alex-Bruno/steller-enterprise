{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        li {
            list-style: none;
        }
    </style>
{% endblock %}
{% block body %}
    <main id="body">
        <div id="contacts" class="mt-2 mb-2">
            <div class="row">
                <div class="col text-center header">
                    <h2>Contacts</h2>
                </div>
            </div>

            {% if isSend is defined %}
                <div class="row p-3 m-3">
                    <div class="container">
                        <div class="col-12 p-3">
                            <div class="text-center header mb-3">
                                {% if isSend %}
                                    <h3>Thank you for contacting us, we will reply to you soon!</h3>
                                {% else %}
                                    <h3>There was an error with your contact, please try again later!</h3>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="row p-3 m-3">
                    <div class="col-6 p-3 bg-light">
                        <div class="row">
                            <div class="container">
                                <div class="col-12">
                                    <div class="text-center header mb-3">
                                        <h3>Contact-us by e-mail</h3>
                                    </div>
                                </div>
                                <div class="col-12">
                                    {{ include('contact/_form.html.twig') }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-5 p-3 offset-1 bg-light">
                        <div class="row">
                            <div class="container">
                                <div class="col-12">
                                    <div class="text-center header mb-3">
                                        <h3>Or contact us by other contacts</h3>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <ul>
                                        {% for contact in enterprise.contacts %}
                                            <li><strong>{{ contact.label }}: </strong>{{ contact.text }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

        </div>

    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
