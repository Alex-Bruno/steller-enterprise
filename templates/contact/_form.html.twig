{{ form_start(form) }}
<div class="row form mt-2">
    <div class="col {% if form.name.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
</div>
<div class="row form mt-2">
    <div class="col {% if form.email.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>
</div>
<div class="row form mt-2">
    <div class="col {% if form.phone.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone) }}
        {{ form_errors(form.phone) }}
    </div>
</div>
<div class="row form mt-2">
    <div class="col {% if form.text.vars.errors|length %} has-error {% endif %}">
        {{ form_label(form.text) }}
        {{ form_widget(form.text) }}
        {{ form_errors(form.text) }}
    </div>
</div>
<div class="row mt-2">
    <div class="col text-center">
        <button class="btn btn-success mb-2"><i class="fa fa-send"></i> {{ button_label|default('Send') }}</button>
    </div>
</div>
{{ form_end(form) }}
